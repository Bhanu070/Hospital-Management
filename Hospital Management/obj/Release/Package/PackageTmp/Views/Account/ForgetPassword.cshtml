@{
    ViewBag.Title = "Log in";
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
}
<script src="~/assets/commonValidation.js"></script>




<div class="form-content">
    <div class="form-items">
        <div class="other-links">
            @if (ViewBag.Msg != "")
            {
                if (Session["Message"].ToString() == "success")
                {
                    <div class="alert alert-success">
                        <button class="close" data-close="alert"></button> @ViewBag.Msg
                    </div>
                }
                if (Session["Message"].ToString() == "danger")
                {
                    <div class="alert alert-danger">
                        <button class="close" data-close="alert"></button> @ViewBag.Msg
                    </div>
                }
            }
        </div>
        <h3>Password Reset</h3>
        <p>To reset your password, enter the email address you use to sign in to iofrm</p>

        @using (Html.BeginForm("Forget_Password", "Home", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
        {
            <input class="form-control" type="email" id="email" name="email" placeholder="E-mail Address" required>

            <div class="form-button">
                <button id="submit" type="submit" class="ibtn">Submit</button> <a href="/Home/Login">Login</a>
            </div>
        }

        <div class="other-links">
            <span>Go to Website</span><a href="http://waqf.sarahtech.com/" style="text-decoration:none;" target="_blank">waqf.sarahtech.com</a>
        </div>
    </div>
</div>
