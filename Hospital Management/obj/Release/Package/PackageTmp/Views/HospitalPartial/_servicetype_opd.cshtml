@model Hospital_Management.Models.MainModel

<table class="table table-striped- table-bordered table-hover table-checkable table-sm" id="table_pend">
    <thead>
        <tr>
            <th>
                <label class="mt-checkbox mt-checkbox-single mt-checkbox-outline">
                    <input type="checkbox" class="group-checkable" id="select-all" name="select-all" onclick="selectallapp();" data-set="#sample_1 .checkboxes" />
                    <span></span>
                </label>
            </th>
            <th style="width:5%; text-align:center;">S.No. </th>

            <th> Service Type </th>
            <th style="width:20%;"> Service Name </th>
            <th> Price </th>
            <th> Discount </th>

            <th style="width:15%;"> Created By </th>
            <th style="width:15%;"> Created On </th>

        </tr>
    </thead>
    <tbody>
        @{
            int SNo = 0;
        }
        @foreach (var item in Model.Service_type_MasterList)
        {
            SNo++;
            <tr class="odd gradeX">

                <td>
                    <label class="mt-checkbox mt-checkbox-single mt-checkbox-outline">
                        <input type="checkbox" class="checkboxes" id="chkapprove_@item.ServiceId" name="chkapprove_@item.ServiceId" />
                        <span></span>
                    </label>
                </td>
                <td align="center"> @SNo </td>
                <td> @item.ServiceType </td>
                <td> @item.ServiceName </td>
                <td> @item.Price </td>
                <td> @item.Discount </td>
                <td> @item.CreatedBy </td>
                <td> @item.CreatedOn.ToString("dd-MM-yyyy") </td>
            </tr>
        }
    </tbody>
</table>

<br />


<script>
    function selectallapp() {

        var checkboxes = document.getElementsByTagName('input'), val = null;

        for (var i = 0; i < checkboxes.length; i++) {
            if (checkboxes[i].type == 'checkbox') {
                if (val === null) val = checkboxes[i].checked;
                checkboxes[i].checked = val;
                totalIt();
            }
        }
    }
</script>
