@model string
@{
    Layout = null;
}

<!DOCTYPE html>
<link href="//netdna.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>ActivateAccount</title>
</head>
<body>
    <div class="container">
        <br>
        <br>
        @if (ViewBag.Success != null )
        {
            <div class="alert alert-success">
                <a href="/Home/Login" class="btn btn-xs btn-primary pull-right">Sign In Your Account</a>
                <strong>Success! :</strong>  Your Email Address is @ViewBag.Email Successfully Verified.
            </div>
        }
        else
        {
            <div class="alert alert-danger">
                <a href="/User/Account/Register" class="btn btn-xs btn-danger pull-right">Register Your Account</a>
                <strong>Error! :</strong>  @ViewBag.error
            </div>

        }
    </div>
</body>
</html>
















