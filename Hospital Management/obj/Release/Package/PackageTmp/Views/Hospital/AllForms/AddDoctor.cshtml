@model Hospital_Management.Models.MainModel

@{
    ViewBag.Title = "Doctor Master";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="card card-custom gutter-b example example-compact">
    <div class="alert font-size-h3 text-center" style="background-color:#2ac9bb; color:white; font-family: Georgia, serif">
        Doctor Master
    </div>

    <div class="card-body">
        @using (Html.BeginForm("SaveDoctor", "Hospital", FormMethod.Post, new { enctype = "multipart/form-data", @class = "form-horizontal", @id = "form_sample_2" }))
        {
            <input type="hidden" id="Id" name="Id" value="@Model.Doctor_Master.Doc_Id" />
            <div class="form-group row">
                <div class="col-lg-3">
                </div>
                <div class="col-lg-3">
                    <label>Doctor Name<span style="color:red;">*</span>:</label>
                    <div class="input-group">
                        <div class="input-group-prepend"><span class="input-group-text"><i class="fa fa-user"></i></span></div>
                        <input type="text" placeholder="Enter Doctor Name" class="form-control" name="Doc_Name" id="Doc_Name" value="@Model.Doctor_Master.Doc_Name" required />
                    </div>
                </div>
                <div class="col-lg-3">
                    <label>Qualification <span style="color:red;">*</span>:</label>
                    <div class="input-group">
                        <div class="input-group-prepend"><span class="input-group-text"><i class="fa fa-graduation-cap"></i></span></div>
                        <input type="text" placeholder="Enter Qualification" class="form-control" name="Qualification" id="Qualification" value="@Model.Doctor_Master.Qualification" required />
                    </div>
                </div>
                <div class="col-lg-3">
                </div>
            </div>

            <div class="card-footer">
                <div class="row">
                    <div class="col-lg-5"></div>
                    <div class="col-lg-7">
                        <button type="submit" class="btn" style="background-color:#2ac9bb; color:white; width:200px"> <span class="fa fa-save"></span> @ViewBag.buttontitle</button>
                        &nbsp;&nbsp;
                        <a href="/Hospital/Doctor" class="btn btn-danger"><span class="fa fa-times"></span> Cancel</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<script type="text/javascript">
    function checkNum() {
        if ((event.keyCode > 64 && event.keyCode < 91) || (event.keyCode > 96 && event.keyCode < 123) || event.keyCode == 8 || event.keyCode == 32)
            return true;
        else {
            alert("Please enter only char");
            return false;
        }
    }
</script>