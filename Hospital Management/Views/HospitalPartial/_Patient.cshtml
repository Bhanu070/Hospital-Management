@model Hospital_Management.Models.MainModel

@if (ViewBag.Msg != "")
{
    <div id="msg">
        <h6 class="alert text-center" style="background-color:#2ac9bb; color:white">
            @ViewBag.Msg &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;<a class="alert-dismissable" data-dismiss="alert"> <span class="fa fa-times"></span> </a>
        </h6>
    </div>
}
<script>
    $(document).ready(function () {
        setTimeout(function () {
            $("#msg").fadeOut();
        }, 5000);
    });
</script>


<table class="table table-striped- table-bordered table-hover table-checkable table-sm" id="table_pend">
    <thead>
        <tr>
            <th style="width:5%; text-align:center;">S.No. </th>
            <th style="width:20%;"> Patient Name </th>
            <th> Patient Id </th>
            <th> Age </th>
            <th> Sex </th>
            <th> Mobile No </th>
            <th> Address</th>
            <th style="width:15%;"> Created By </th>
            <th style="width:15%;"> Created On </th>

            <th> Action </th>
        </tr>
    </thead>
    <tbody>
        @{
            int SNo = 0;
        }
        @foreach (var item in Model.Patient_MasterList)
        {
            SNo++;
        <tr class="odd gradeX">
            <td align="center"> @SNo </td>
            <td> @item.Patient_Name </td>
            <td> @item.Patient_UID </td>
            <td> @item.Age </td>
            <td> @item.Sex </td>
            <td> @item.MobileNo </td>
            <td> @item.Address </td>
            <td> @item.CreatedBy </td>
            <td> @item.CreatedOn.ToString("dd-MM-yyyy") </td>

            <td>
                <a href="/Hospital/Patient?Id=@item.Patient_Id  " class="btn btn-icon btn-warning btn-xs mr-1"><i class="fa fa-edit" data-container="body" data-toggle="tooltip" data-placement="top" title=""></i></a>
                <a href="/Hospital/DeletePatient?Id=@item.Patient_Id  " onclick=" return confirm('Are You Sure ! Do you Want to delete ?')" class="btn btn-icon btn-youtube btn-xs mr-1"><i class="flaticon-delete" data-container="body" data-toggle="tooltip" data-placement="top" title=""></i></a>
            </td>
        </tr>
        }
    </tbody>
</table>

